generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String           @id @default(uuid())
  firstname         String
  lastname          String
  email             String           @unique
  password          String
  role              Role             @relation(fields: [role_id], references: [id])
  role_id           String
  reset_token       String?
  phone_number      String?
  hire_date         DateTime
  department        Department?      @relation(fields: [department_id], references: [id])
  department_id     String?
  employment_type   EmploymentType
  compensation_type CompensationType
  salary_rate       Float
  center            Center?          @relation(fields: [center_id], references: [id])
  center_id         String?
  created_at        DateTime         @default(now())
  updated_at        DateTime?
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
}

enum CompensationType {
  HOURLY
  SALARY
}

model Role {
  id         String    @id @default(uuid())
  name       String    @unique
  created_at DateTime  @default(now())
  updated_at DateTime?
  users      User[]
}

model Department {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime?
  User       User[]
  Program    Program[]
}

model Center {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime?
  User       User[]
}

model Program {
  id             String     @id @default(uuid())
  name           String
  code           String
  department     Department @relation(fields: [department_id], references: [id])
  department_id  String
  from_date      DateTime
  to_date        DateTime
  income         Json
  supply_expense Json
  salary_expense Json
  created_at     DateTime   @default(now())
  updated_at     DateTime?
}
